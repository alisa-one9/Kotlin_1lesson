<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAE68F"
    android:padding="20dp"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginTop="88dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        android:background="@color/white"
        android:src="@drawable/monicabellucci"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/edit_text_input1"
        app:layout_constraintBottom_toTopOf="@id/edit_text_input2"
        android:background="#BEBF7F"
        android:hint="What her name  is ?:"/>
    <EditText
        android:id="@+id/edit_text_input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="input here:"
        android:background="@color/white"
        android:textSize="20sp"
        android:padding="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_first_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/edit_text_input2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Go to first page"
        app:cornerRadius="26dp"
        android:background="#45191D"
        android:padding="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>